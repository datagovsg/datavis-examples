{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "data": {
    "url": "../data/burtin-tidy.csv",
    "format": {
      "type": "csv"
    }
  },
  "mark": "bar",
  "encoding": {
    "column": {
      "field": "Bacteria", 
      "type": "nominal"
    },
    "row": {
      "field": "Gram Staining", 
      "type": "nominal"
    }, 
    "color": {"field": "Antibiotic","type": "nominal"},
    "tooltip": {"field": "MIC", "type": "quantitative"},
    "x": {"field": "Antibiotic", "type": "nominal"},
    "y": {
      "field": "MIC",
      "type": "quantitative",
      "scale": {
        "type": "log",
        "reverse": true
      }
    }
  }
}
